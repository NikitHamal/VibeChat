<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="64dp"
    android:paddingEnd="8dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:clipToPadding="false">

    <!-- This ConstraintLayout is the main bubble container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/message_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_sent_bubble"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Reply Quote Layout (inside the bubble) -->
        <LinearLayout
            android:id="@+id/reply_quote_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/bg_reply_quote_sent"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <!-- The little color bar for the reply -->
            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reply_quote_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="Aria" />

                <TextView
                    android:id="@+id/reply_quote_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="14sp"
                    tools:text="This is the original message that was replied to, and it might be a little bit long." />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/message_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reply_quote_layout"
            tools:text="This is a sent message example that is a bit longer." />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Reactions Layout (overlapping the bubble) -->
    <LinearLayout
        android:id="@+id/reaction_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_reaction_container"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:paddingStart="6dp"
        android:paddingTop="4dp"
        android:paddingEnd="6dp"
        android:paddingBottom="4dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/message_content_layout"
        app:layout_constraintTop_toBottomOf="@id/message_content_layout"
        tools:visibility="visible">
        <!-- Reaction emojis will be added here dynamically -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>