<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".AuthActivity">

    <!-- Top Section - Welcome Content -->
    <LinearLayout
        android:id="@+id/welcome_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/auth_options_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Icon -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_marginBottom="32dp" />

        <!-- Welcome Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to VibeZ"
            android:textSize="32sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginBottom="12dp" />

        <!-- Welcome Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect with strangers around the world"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Feature Highlights -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:gravity="start">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_feature_dot"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anonymous &amp; Safe"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/poppins_medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_feature_dot"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instant Connections"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/poppins_medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_feature_dot"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fun &amp; Friendly"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/poppins_medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Section - Auth Options -->
    <LinearLayout
        android:id="@+id/auth_options_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Continue with Google Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/google_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue with Google"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semi_bold"
            app:icon="@drawable/ic_google"
            app:iconGravity="textStart"
            app:iconTint="@null"
            app:iconSize="24dp"
            app:iconPadding="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="?attr/colorOutline"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Divider with "or" text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?attr/colorOutline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_medium"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="?attr/colorOutline" />

        </LinearLayout>

        <!-- Continue as Guest Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/guest_continue_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue as Guest"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semi_bold"
            app:icon="@drawable/ic_person"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            app:iconPadding="12dp"
            app:cornerRadius="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <!-- Privacy Notice -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By continuing, you agree to our Terms of Service and Privacy Policy"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:alpha="0.7" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
