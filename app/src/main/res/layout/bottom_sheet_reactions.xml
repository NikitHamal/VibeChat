<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurfaceContainer"
    android:paddingTop="8dp"
    android:paddingBottom="16dp">

    <!-- Emoji Reactions -->
    <LinearLayout
        android:id="@+id/emoji_reactions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/reaction_love"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_reaction_love"
            android:contentDescription="Love"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/reaction_laugh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_reaction_laugh"
            android:contentDescription="Laugh"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/reaction_wow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_reaction_wow"
            android:contentDescription="Wow"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/reaction_sad"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_reaction_sad"
            android:contentDescription="Sad"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/reaction_angry"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_reaction_angry"
            android:contentDescription="Angry"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOutlineVariant"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- Action Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/action_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copy"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:drawableStart="@drawable/ic_copy"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceBodyLarge"/>

        <TextView
            android:id="@+id/action_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reply"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:drawableStart="@drawable/ic_reply"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceBodyLarge"/>

        <TextView
            android:id="@+id/action_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:drawableStart="@drawable/ic_report"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceBodyLarge"/>
    </LinearLayout>

</LinearLayout>