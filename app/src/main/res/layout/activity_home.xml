<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="VibeZ"
            app:titleTextColor="?attr/colorPrimary"
            app:menu="@menu/home_menu" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/find_a_stranger"
                android:textSize="28sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/user_details_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_your_details"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="32dp"/>

                <!-- Username Input -->
                <EditText
                    android:id="@+id/username_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_home_input"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="16dp"
                    android:drawableTint="?attr/colorOnSurfaceVariant"
                    android:padding="16dp"
                    android:hint="@string/username"
                    android:inputType="textPersonName"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <!-- Gender Input -->
                <TextView
                    android:id="@+id/gender_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_home_input"
                    android:drawableStart="@drawable/ic_gender"
                    android:drawablePadding="16dp"
                    android:drawableTint="?attr/colorOnSurfaceVariant"
                    android:padding="16dp"
                    android:text="@string/gender"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"/>

                <!-- Age Input -->
                <EditText
                    android:id="@+id/age_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_home_input"
                    android:drawableStart="@drawable/ic_cake"
                    android:drawablePadding="16dp"
                    android:drawableTint="?attr/colorOnSurfaceVariant"
                    android:padding="16dp"
                    android:hint="@string/age"
                    android:inputType="number"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    android:layout_marginBottom="32dp"/>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/anonymous_mode_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:strokeWidth="1dp"
                app:strokeColor="@color/outline"
                android:layout_marginBottom="32dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_domino_mask"
                        app:tint="?attr/colorPrimary"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/anonymous_mode"
                        android:textSize="22sp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/anonymous_mode_subtitle"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_chat_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_chat"
                app:icon="@drawable/ic_chat"
                app:iconGravity="textStart"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                app:cornerRadius="28dp" />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>