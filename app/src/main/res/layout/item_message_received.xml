<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="56dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <LinearLayout
        android:id="@+id/reply_quote_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_reply_quote_received"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="-2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/message_text"
        app:layout_constraintStart_toStartOf="@id/message_text"
        tools:visibility="visible">

        <TextView
            android:id="@+id/reply_quote_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:textSize="12sp"
            tools:text="You" />

        <TextView
            android:id="@+id/reply_quote_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            tools:text="This is the original message that was replied to." />
    </LinearLayout>

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_received_bubble"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="This is a received message example." />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/reactions_flow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:constraint_referenced_ids="reaction_container"
        app:flow_horizontalAlign="start"
        app:flow_wrapMode="chain"
        app:layout_constraintStart_toStartOf="@id/message_text"
        app:layout_constraintTop_toBottomOf="@id/message_text" />

    <LinearLayout
        android:id="@+id/reaction_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_reaction_container"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:visibility="gone"
        tools:visibility="visible">
        <!-- Reaction emojis will be added here dynamically -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>